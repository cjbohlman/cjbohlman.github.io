  {elements.map(element => <LinkCard title={element.title} body={element.body} link={element.link} />)}
</ul>

<style>
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
