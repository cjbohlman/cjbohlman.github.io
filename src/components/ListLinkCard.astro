---
export interface Props {
	title: string;
	body: string;
	link?: string;
}

const { link, title, body } = Astro.props;
---

<li class="link-card col-span-1">
	<a href={link} class="">
    <h4 class="block text-xl m-0 opacity-80">
      {title}
    </h4>

    <ul class="list-none">
      {body.split(',').map(text => <li class="mt-1 mb-0 opacity-80">{text}</li>)}
    </ul>
  </a>
</li>
<style>
	.link-card {
		display: flex;
		padding: 0.15rem;
		border-radius: 0.5rem;
		background-position: 100%;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    color: #d1d5db;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 300ms;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
	}

	.link-card:is(:hover, :focus-within) {
		transform: scale(1.1);
	}

  .link-card:is(:hover, :focus-within) h4 {
		opacity: 100%;
	}
</style>
