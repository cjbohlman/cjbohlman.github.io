---
export interface Props {
	title: string;
  subtitle?: string;
	body: string;
  body2?: string;
	href: string;
}

const { href, title, subtitle, body, body2 } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2 class="block text-xl m-0">
			{title}
		</h2>
    <h3 class="block uppercase text-lg mt-1.5">
			{subtitle}
		</h3>
		<p class="mt-1 mb-0">
			{body}
		</p>
    <p class="mt-1 mb-0">
			{body2}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15rem;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    color: #F5F3F5;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		background-color: #181F31;
		opacity: 0.8;
	}
	h2 {
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: #598392;
	}
</style>
