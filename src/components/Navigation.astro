---
import NavigationItem from "./NavigationItem.astro";

const navItems = [
  {
    "name": "Experience",
    "ref": "/#experience",
  },
  {
    "name": "Projects",
    "ref": "/#projects",
  },
  {
    "name": "Blog",
    "ref": "/blog",
  }
];
---
<nav class="flex flex-row lg:flex-col justify-between lg:justify-start py-3">
  <a href="/" title="Homepage" class="font-serif text-2xl xs:text-3xl sm:text-4xl opacity-80 hover:opacity-100 ease-in-out duration-300 lg:mb-6">
    <span class="font-medium">chris</span><span class="font-black">Bohlman</span>
  </a>

  <ul class="flex lg:flex-col">
    {navItems.map((data) => <NavigationItem name={data.name} ref={data.ref}/>)}
  </ul>

</nav>



