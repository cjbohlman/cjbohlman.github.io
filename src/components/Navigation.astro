import NavigationItem from "./NavigationItem.astro";

const navItems = [
  {
    "name": "Home",
    "ref": "",
  },
  {
    "name": "Portfolio",
    "ref": "portfolio",
  },
  {
    "name": "Resume",
    "ref": "resume",
  },
  {
    "name": "Blog",
    "ref": "blog",
  },
  {
    "name": "About",
    "ref": "about",
  },
