---
const {name, ref, icon} = Astro.props
const pathname = Astro.url.pathname.substring(1);

const aBaseClasses = "flex flex-col items-center";
---
<li class="mx-2 my-1">
  <a class={`${pathname.toLowerCase() !== ref.toLowerCase() ? "opacity-50 hover:opacity-80 transition duration-300 ease-in-out " + aBaseClasses : aBaseClasses}`} href={`/${ref}`}>
    <span class="">{name}</span>
  </a>
</li>

