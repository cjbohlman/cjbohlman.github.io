---
const {name, ref, icon} = Astro.props
const pathname = Astro.url.pathname.substring(1);
---
<li class="mx-2 my-1">
  <a class={`${pathname.toLowerCase() !== ref.toLowerCase() ? "opacity-50 hover:opacity-80 transition duration-300 ease-in-out flex flex-col items-center" : "flex flex-col items-center"}`} href={`/${ref}`}>
    <span class="">{name}</span>
  </a>
</li>

